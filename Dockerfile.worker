# === Base image ===
FROM python:3.11-slim

# === Working directory ===
WORKDIR /app

# === Copy dependencies ===
COPY requirements.txt .

# === Install dependencies ===
RUN pip install --no-cache-dir -r requirements.txt

# === Copy source code ===
COPY src/ ./src/

# === Expose port ===
EXPOSE 8080

# === Run worker ===
CMD ["uvicorn", "src.worker.main:app", "--host", "0.0.0.0", "--port", "8080"]
